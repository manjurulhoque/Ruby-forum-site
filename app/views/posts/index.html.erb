<h1>All Post</h1>

<% @posts.each do |post| %>

<div class="row">
    <div class="col-xs-8">
        <div class="col-xs-offset-2">
            <div class="well well-lg">
                <div class="post-title">
                    <h2><%= link_to post.title, post_path(post) %></h2>
                </div>
                <div class="post-body">
                    <p><%= truncate(post.content, length: 100) %></p>
                    <div class="post-meta-details">
                        
                        <small>Created by: <%= post.user.username if post.user %></small>
                        
                        <small>Created at: <%= time_ago_in_words(post.created_at) %> ago</small>
                        <small>Updated at: <%= time_ago_in_words(post.updated_at) %></small>
                    </div>
                </div>
                <div class="post-actions">
                    <%= link_to "Edit this post", edit_post_path(post), class: "btn btn-xs btn-primary" %>
                    <%= link_to "Delete this post", post_path(post), method: :delete, class: "btn btn-xs btn-danger", data: {confirm: "Are you sure?"} %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>