<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <%= form_for @post, :html => {class: "form-horizontal", role: "form"} do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :title %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :category_id %>
                </div>
                <div class="col-sm-8">
                    <%= f.collection_select :category_id, Category.all, :id, :name, {}, {class: "form-control"} %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :content %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :content, class: "form-control", rows: 6, placeholder: "Description of article", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <%= f.submit "Create new", class: "btn btn-primary" %>
                    <%= link_to 'Cancel and back', posts_path, class: "btn btn-danger" %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>